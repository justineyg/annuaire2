{% extends 'base.html.twig' %}

{% block title %}Accueil | Sciences Po Saint-Germain-en-Laye{% endblock %}

{% block body %}
<style>
    h1{text-align: center}
    .example-wrapper { margin: 3em auto; max-width: 1000px; width: 100%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .promotions{ height: 500px; display: flex; flex-wrap: wrap;}
    .promotions>* { flex: 1 1 500px; margin-bottom: 20px; padding: 20px 20px}
    .text_section{ background: #21524F; height: 100px; display: flex; padding: 10px 20px; justify-content: space-between;}
    .name{ font-size: 1.3rem; letter-spacing: 1.2px; font-weight: bold;}
    .year{ font-size: 1rem}
    i{ color: #FFD144}


</style>
{% include "partials/_header.html.twig" %}

<div class="example-wrapper">
    <h1>Les promotions</h1>

    <div class="promotions">

        {% for promotion in promotions %}
        <div class="year_of_promotion">
            <img src={{asset('img/josephineBaker.webp')}} width="100%">
            <div class="text_section">
            
                <p class="name">{{promotion.name}}</p>
                <p class="year">Promotion {{promotion.year.id}}</p>
                <p>
                    <a href="{{ path('show', {'id': promotion.id}) }}">
                        <i class="fa-solid fa-arrow-right-long"></i>
                    </a>
                </p>
            </div>
        </div>
        {% endfor %}  
    </div>
</div>
{% endblock %}
